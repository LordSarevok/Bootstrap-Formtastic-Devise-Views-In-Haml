%h2 Cambiar mi password

= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :patch }) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :password
    = f.input :password_confirmation
  = f.hidden_field :reset_password_token
  = f.actions do
    = f.button 'Cambiar mi password', class: "btn btn-success"

= render "devise/shared/links"
