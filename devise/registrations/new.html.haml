%h2 Registrarme
= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
  = f.actions do
    = f.button 'Registrarme', class: "btn btn-success"
= render "devise/shared/links"
