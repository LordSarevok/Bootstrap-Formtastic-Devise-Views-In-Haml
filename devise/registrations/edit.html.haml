%h2 Editar #{ resource_name.to_s.humanize }
= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.input :current_password
  = f.buttons do
    = f.commit_button button_html: {class: "primary"}

%h3 Cancear mi cuenta

%p ¿Quieres darte de baja? #{ link_to "Cancelar mi cuenta", registration_path(resource_name), data: {confirm: "¿Estás seguro?", method: :delete }}

= link_to "Volver", :back
